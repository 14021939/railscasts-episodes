<% title "Chat" %>

<ul id="chat">
<% for message in @messages %>
  <li>
    <span class="created_at"><%= message.created_at.strftime("%H:%M") %></span>
    <%= message.content %>
  </li>
<% end %>
</ul>

<%= form_for Message.new do |f| %>
  <%= f.text_field :content %>
  <%= f.submit "Send" %>
<% end %>
